# EditorConfig for Astonia Client
# Ensures consistent file formatting across editors
# See https://editorconfig.org

root = true

# Default for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# C/C++ source files - use tabs
[*.{c,h}]
indent_style = tab
indent_size = 4
tab_width = 4

# Rust source files - use spaces (Rust convention)
[*.rs]
indent_style = space
indent_size = 4

# Makefiles - must use tabs
[Makefile*]
indent_style = tab

# YAML files (GitHub Actions) - use spaces
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# TOML files - use spaces
[*.toml]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
